+        base_path = self.__get_base_path()
+        if self.follow_hierarchy:
+            return os.path.join(base_path, '{0}/{1}'.format(self.org_name, self.repo_name))
+        return os.path.join(base_path, '{0}-{1}'.format(self.org_name, self.repo_name))
