+    @staticmethod
+    def sanitize_url(path):
+        if path.startswith('/r/'):
+            path = path.replace('/r/', '')
+        elif path.startswith('/gerrit/'):
+            path = path.replace('/gerrit/', '')
+        path = path.lstrip('/')
